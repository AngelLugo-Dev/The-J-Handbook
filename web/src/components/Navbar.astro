<script is:inline> 
  (function() {
    const html = document.documentElement;
    
    // Detectar preferencia del sistema: true = oscuro, false = claro
    const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    // Aplicar clase 'dark' si el sistema está en modo oscuro
    if (isDark) {
      html.classList.add('dark');
    } else {
      html.classList.remove('dark');
    }
  })();
</script>