---


import { ClientRouter } from "astro:transitions";
import Navbar from '../components/Navbar.astro';
import Sidebar from '../components/Sidebar.astro';
import '../styles/global.css';


interface Props {
	title: string;
	description?: string;
}

const { title, description = 'The J-Handbook - Aprende Java de forma pr√°ctica' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <ClientRouter />
</head>
<body class="min-h-screen flex flex-col bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 transition-colors duration-300">
  
  
  <Navbar />
  
  
  <div class="flex flex-1">
    
  
    <div class="hidden lg:block">
      <Sidebar />
    </div>
    
    <main class="flex-1 py-8 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full">
      <slot />
    </main>
  </div>
  
  <footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 py-8 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        &copy; Java is a registered trademark of Oracle and/or its affiliates. This project (The J-Handbook) is an independent educational tool and is not affiliated with, endorsed by, sponsored by, or approved by Oracle. All source code and content are for educational purposes._
      </p>
    </div>
  </footer>
</body>
</html>

